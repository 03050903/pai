<section class='content-header'><%= breadcrumb({ breadcrumbTitle: "Virtual Clusters" }) %></section>

<section class='content'>
<div class='box'>
  <div class='box-body'>
    <table id='vc-table' class='table table-bordered table-hover table-condensed' style='vertical-align:middle'>
      <thead>
        <tr>
          <th>VC Name</th>
          <th>Description</th>
          <th>Active Jobs</th>
          <th>Active GPUs</th>
          <th>Configured GPUs</th>
          <th>Utilization (%)</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% for (let x in data) { %>
          <% if (specifiedVc && x !== specifiedVc) continue; %>
          <tr>
            <td><%= x %></td>
            <td><%= data[x]['description'] %></td>
            <td><%= data[x]['activeJobs'] %></td>
            <td><%= data[x]['activeGpus'] %></td>
            <td><%= data[x]['configuredGpus'] %></td>
            <td><%= data[x]['activeGpus'] / data[x]['configuredGpus'] * 100 %></td>
            <td>
              <a href="view.html?vcName=<%= x %>">View Jobs</a>
              &nbsp;&nbsp;|&nbsp;&nbsp;
              Go to VC Metrics Page
            </td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</div>
</section>
