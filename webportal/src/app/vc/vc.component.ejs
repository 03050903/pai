<section class='content-header'>
  <%= breadcrumb({ breadcrumbTitle: "Virtual Clusters" }) %>
</section>

<section class='content'>
  <div class='box'>
    <div class='box-body'>
      <table id='vc-table' class='table table-bordered table-hover table-condensed' style='vertical-align:middle'>
        <thead>
          <tr>
            <th>VC Name</th>
            <th>Running Jobs</th>
            <th>Pending Jobs</th>
            <th>Used Capacity</th>
            <th>Configured Capacity</th>
            <th>Utilization</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% for (let x in data) { %>
            <% if (specifiedVc && x !== specifiedVc) continue; %>
              <tr>
                <td>
                  <%= x %>
                </td>
                <td>
                  <%= data[x]['numActiveJobs'] %>
                </td>
                <td>
                  <%= data[x]['numPendingJobs'] %>
                </td>
                <td>
                  <%= formatNumber(data[x]['usedCapacity'], 2) %> %
                </td>
                <td>
                  <%= formatNumber(data[x]['capacity'], 2) %> %
                </td>
                <td>
                  <%= formatNumber(data[x]['usedCapacity'] / data[x]['capacity'] * 100, 2) %> %
                </td>
                <td>
                  <a href="view.html?vcName=<%= x %>">View All Jobs in
                    <%= x %>
                  </a>
                </td>
              </tr>
              <% } %>
        </tbody>
      </table>
    </div>
  </div>
</section>